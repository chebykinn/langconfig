{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "target": "es2022",
    "module": "NodeNext",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
        "~/*": ["./*"]
    }

  },
  "exclude": ["out", "dist"],
  "include": ["**/*.ts"]
}